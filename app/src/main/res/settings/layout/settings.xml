<?xml version="1.0" encoding="utf-8"?>
<com.bosphere.fadingedgelayout.FadingEdgeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:forceDarkAllowed="false"
    app:fel_edge="bottom"
    app:fel_size_bottom="20dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_medium"
                android:letterSpacing="-0.03"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/settings"
                android:textSize="30sp"
                android:visibility="invisible" />

            <com.bosphere.fadingedgelayout.FadingEdgeLayout
                android:id="@+id/fader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fel_edge="top"
                app:fel_size_top="20dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <include layout="@layout/settings_content" />

                </androidx.core.widget.NestedScrollView>

            </com.bosphere.fadingedgelayout.FadingEdgeLayout>

        </LinearLayout>

        <com.stario.launcher.ui.common.collapsible.CollapsibleTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <carbon.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_medium"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:paddingTop="10dp"
                android:text="@string/settings"
                android:textColor="?attr/colorOnSurface"
                android:textSize="30sp" />

        </com.stario.launcher.ui.common.collapsible.CollapsibleTitleBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.bosphere.fadingedgelayout.FadingEdgeLayout>